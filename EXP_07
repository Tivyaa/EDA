import plotly.express as px
import pandas as pd

# sample global dataset (gapminder)
df = px.data.gapminder().query("year == 2007")

# quick inspect
print(df[['country','iso_alpha','gdpPercap']].sample(5))

# choropleth (world)
fig = px.choropleth(
    df,
    locations="iso_alpha",       # ISO alpha-3 codes column
    color="gdpPercap",          # numeric column to color by
    hover_name="country",
    title="Global GDP per Capita - 2007",
    color_continuous_scale="Viridis"
)
fig.update_layout(margin={"r":0,"t":40,"l":0,"b":0})
fig.show()
